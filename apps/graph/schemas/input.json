{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "nodes", "edges"],
  "properties": {
    "type": { "const": "graph" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "color": { "type": "string" },
          "size": { "type": "number" },
          "group": { "type": "string" }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target"],
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "label": { "type": "string" },
          "weight": { "type": "number" },
          "color": { "type": "string" }
        }
      }
    },
    "directed": { "type": "boolean" }
  }
}
