{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "title", "message"],
  "properties": {
    "type": { "const": "confirm" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "message": { "type": "string" },
    "severity": { "enum": ["info", "warning", "danger"] },
    "details": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "value"],
        "properties": {
          "label": { "type": "string" },
          "value": { "type": "string" }
        }
      }
    },
    "confirmLabel": { "type": "string" },
    "cancelLabel": { "type": "string" },
    "confirmTool": { "type": "string" },
    "confirmArgs": { "type": "object" },
    "cancelTool": { "type": "string" },
    "cancelArgs": { "type": "object" }
  }
}
