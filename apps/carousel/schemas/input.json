{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "items"],
  "properties": {
    "type": { "const": "carousel" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "type": "string" },
          "image": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "url": { "type": "string" },
              "alt": { "type": "string" }
            }
          },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "action": {
            "type": "object",
            "required": ["label", "tool", "arguments"],
            "properties": {
              "label": { "type": "string" },
              "tool": { "type": "string" },
              "arguments": { "type": "object" }
            }
          }
        }
      }
    },
    "autoPlay": { "type": "boolean" },
    "autoPlayInterval": { "type": "number" },
    "showDots": { "type": "boolean" },
    "showArrows": { "type": "boolean" },
    "loop": { "type": "boolean" },
    "transition": { "enum": ["slide", "fade"] }
  }
}
