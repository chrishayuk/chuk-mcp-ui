{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "title", "questions", "validateTool"],
  "properties": {
    "type": { "const": "quiz" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "prompt", "options"],
        "properties": {
          "id": { "type": "string" },
          "type": { "enum": ["multiple-choice", "true-false", "image-choice"] },
          "prompt": { "type": "string" },
          "image": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "url": { "type": "string" },
              "alt": { "type": "string" }
            }
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "label"],
              "properties": {
                "id": { "type": "string" },
                "label": { "type": "string" },
                "image": {
                  "type": "object",
                  "required": ["url"],
                  "properties": {
                    "url": { "type": "string" },
                    "alt": { "type": "string" }
                  }
                }
              }
            }
          },
          "timeLimit": { "type": "number" },
          "explanation": { "type": "string" },
          "points": { "type": "number" },
          "category": { "type": "string" }
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "timeLimit": { "type": "number" },
        "timeLimitMode": { "enum": ["total", "per-question"] },
        "showExplanation": { "type": "boolean" },
        "showProgress": { "type": "boolean" },
        "showScore": { "type": "boolean" },
        "shuffleQuestions": { "type": "boolean" },
        "shuffleOptions": { "type": "boolean" },
        "passingScore": { "type": "number" }
      }
    },
    "validateTool": { "type": "string" },
    "completeTool": { "type": "string" }
  }
}
