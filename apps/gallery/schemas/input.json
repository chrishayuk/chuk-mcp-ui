{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "items"],
  "properties": {
    "type": { "const": "gallery" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "subtitle": { "type": "string" },
          "description": { "type": "string" },
          "image": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "url": { "type": "string" },
              "alt": { "type": "string" }
            }
          },
          "badges": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["label"],
              "properties": {
                "label": { "type": "string" },
                "variant": { "enum": ["default", "secondary", "outline"] }
              }
            }
          },
          "metadata": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["label", "tool", "arguments"],
              "properties": {
                "label": { "type": "string" },
                "tool": { "type": "string" },
                "arguments": {
                  "type": "object",
                  "additionalProperties": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "columns": { "enum": [1, 2, 3, 4] },
    "filterable": { "type": "boolean" },
    "sortable": { "type": "boolean" },
    "sortFields": {
      "type": "array",
      "items": { "type": "string" }
    },
    "emptyMessage": { "type": "string" }
  }
}
