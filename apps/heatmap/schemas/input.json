{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "rows", "columns", "values"],
  "properties": {
    "type": { "const": "heatmap" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "rows": {
      "type": "array",
      "items": { "type": "string" }
    },
    "columns": {
      "type": "array",
      "items": { "type": "string" }
    },
    "values": {
      "type": "array",
      "items": {
        "type": "array",
        "items": { "type": "number" }
      }
    },
    "colorScale": {
      "enum": ["sequential", "diverging"]
    },
    "minColor": { "type": "string" },
    "maxColor": { "type": "string" },
    "midColor": { "type": "string" },
    "showValues": { "type": "boolean" },
    "annotations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["row", "col", "label"],
        "properties": {
          "row": { "type": "number" },
          "col": { "type": "number" },
          "label": { "type": "string" }
        }
      }
    }
  }
}
