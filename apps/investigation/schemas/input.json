{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "evidence"],
  "properties": {
    "type": { "const": "investigation" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "type"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "type": { "enum": ["person", "document", "location", "event", "object"] },
          "description": { "type": "string" },
          "image": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "metadata": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        }
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "label": { "type": "string" },
          "strength": { "enum": ["strong", "medium", "weak"] }
        }
      }
    },
    "notes": { "type": "string" }
  }
}
