{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "layout", "panels"],
  "properties": {
    "type": { "const": "dashboard" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "layout": { "enum": ["split-horizontal", "split-vertical", "grid"] },
    "gap": { "type": "string" },
    "panels": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "viewUrl", "structuredContent"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "viewUrl": { "type": "string" },
          "structuredContent": {},
          "width": { "type": "string" },
          "height": { "type": "string" },
          "minWidth": { "type": "string" },
          "minHeight": { "type": "string" }
        }
      }
    }
  }
}
