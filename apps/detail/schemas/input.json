{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "title", "fields"],
  "properties": {
    "type": { "const": "detail" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "subtitle": { "type": "string" },
    "image": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": { "type": "string" },
        "alt": { "type": "string" }
      }
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "value"],
        "properties": {
          "label": { "type": "string" },
          "value": { "type": "string" },
          "type": { "enum": ["text", "link", "badge", "date", "email"] }
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "tool"],
        "properties": {
          "label": { "type": "string" },
          "tool": { "type": "string" },
          "args": { "type": "object" }
        }
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "fields"],
        "properties": {
          "title": { "type": "string" },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["label", "value"],
              "properties": {
                "label": { "type": "string" },
                "value": { "type": "string" },
                "type": { "enum": ["text", "link", "badge", "date", "email"] }
              }
            }
          }
        }
      }
    }
  }
}
