{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "entries"],
  "properties": {
    "type": { "const": "transcript" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "speaker", "text"],
        "properties": {
          "id": { "type": "string" },
          "speaker": { "type": "string" },
          "text": { "type": "string" },
          "timestamp": { "type": "string" },
          "duration": { "type": "number" },
          "confidence": { "type": "number" },
          "language": { "type": "string" }
        }
      }
    },
    "speakers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "color": { "type": "string" },
          "avatar": { "type": "string" },
          "role": { "type": "string" }
        }
      }
    },
    "searchable": { "type": "boolean" },
    "showTimestamps": { "type": "boolean" }
  }
}
