{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "columns", "rows"],
  "properties": {
    "type": { "const": "datatable" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "label"],
        "properties": {
          "key": { "type": "string" },
          "label": { "type": "string" },
          "type": {
            "enum": ["text", "number", "date", "boolean", "link", "badge"]
          },
          "sortable": { "type": "boolean" },
          "filterable": { "type": "boolean" },
          "width": { "type": "string" },
          "align": { "enum": ["left", "center", "right"] },
          "format": { "type": "string" },
          "badgeColors": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        }
      }
    },
    "rows": {
      "type": "array",
      "items": { "type": "object" }
    },
    "sortable": { "type": "boolean", "default": true },
    "filterable": { "type": "boolean", "default": true },
    "exportable": { "type": "boolean", "default": false },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "tool", "arguments"],
        "properties": {
          "label": { "type": "string" },
          "icon": { "type": "string" },
          "tool": { "type": "string" },
          "arguments": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "confirm": { "type": "string" }
        }
      }
    }
  }
}
