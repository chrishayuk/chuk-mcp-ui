{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "steps", "activeStep"],
  "properties": {
    "type": { "const": "stepper" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "status": { "enum": ["pending", "active", "completed", "error", "skipped"] },
          "icon": { "type": "string" },
          "detail": { "type": "string" }
        }
      }
    },
    "activeStep": { "type": "number" },
    "orientation": { "enum": ["horizontal", "vertical"] },
    "allowNavigation": { "type": "boolean" },
    "stepTool": { "type": "string" }
  }
}
