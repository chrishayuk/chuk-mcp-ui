{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "hunks"],
  "properties": {
    "type": { "const": "diff" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "language": { "type": "string" },
    "mode": { "enum": ["unified", "split"] },
    "fileA": { "type": "string" },
    "fileB": { "type": "string" },
    "hunks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["headerA", "lines"],
        "properties": {
          "headerA": { "type": "string" },
          "headerB": { "type": "string" },
          "lines": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "content"],
              "properties": {
                "type": { "enum": ["context", "add", "remove"] },
                "content": { "type": "string" },
                "lineA": { "type": "number" },
                "lineB": { "type": "number" }
              }
            }
          }
        }
      }
    }
  }
}
