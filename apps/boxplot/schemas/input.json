{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "groups"],
  "properties": {
    "type": { "const": "boxplot" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "groups": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["label", "stats"],
        "properties": {
          "label": { "type": "string" },
          "color": { "type": "string" },
          "stats": {
            "type": "object",
            "required": ["min", "q1", "median", "q3", "max"],
            "properties": {
              "min": { "type": "number" },
              "q1": { "type": "number" },
              "median": { "type": "number" },
              "q3": { "type": "number" },
              "max": { "type": "number" },
              "outliers": {
                "type": "array",
                "items": { "type": "number" }
              },
              "mean": { "type": "number" }
            }
          }
        }
      }
    },
    "orientation": { "enum": ["vertical", "horizontal"] },
    "showOutliers": { "type": "boolean" },
    "yAxis": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "min": { "type": "number" },
        "max": { "type": "number" }
      }
    }
  }
}
