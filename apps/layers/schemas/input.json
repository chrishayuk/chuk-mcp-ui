{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "layers"],
  "properties": {
    "type": { "const": "layers" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "center": {
      "type": "object",
      "properties": {
        "lat": { "type": "number" },
        "lon": { "type": "number" }
      },
      "required": ["lat", "lon"]
    },
    "zoom": { "type": "integer", "minimum": 1, "maximum": 22 },
    "basemap": { "enum": ["osm", "satellite", "terrain", "dark"] },
    "layers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "features"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "visible": { "type": "boolean", "default": true },
          "opacity": { "type": "number", "minimum": 0, "maximum": 1 },
          "features": { "type": "object" },
          "style": {
            "type": "object",
            "properties": {
              "color": { "type": "string" },
              "weight": { "type": "number" },
              "fillColor": { "type": "string" },
              "fillOpacity": { "type": "number" }
            }
          },
          "popup": {
            "type": "object",
            "required": ["title"],
            "properties": {
              "title": { "type": "string" },
              "fields": { "type": "array", "items": { "type": "string" } }
            }
          },
          "group": { "type": "string" }
        }
      }
    }
  }
}
