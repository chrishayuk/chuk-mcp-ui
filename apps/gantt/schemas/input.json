{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "tasks"],
  "properties": {
    "type": { "const": "gantt" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "start", "end"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "progress": { "type": "number" },
          "color": { "type": "string" },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          },
          "group": { "type": "string" }
        }
      }
    },
    "startDate": { "type": "string" },
    "endDate": { "type": "string" }
  }
}
