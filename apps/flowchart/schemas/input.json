{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "nodes", "edges"],
  "properties": {
    "type": { "const": "flowchart" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "shape": { "enum": ["rect", "diamond", "ellipse", "parallelogram"] },
          "color": { "type": "string" }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target"],
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "label": { "type": "string" },
          "style": { "enum": ["solid", "dashed"] }
        }
      }
    },
    "direction": { "enum": ["TB", "LR"] }
  }
}
