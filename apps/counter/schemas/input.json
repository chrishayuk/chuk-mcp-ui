{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "value", "label"],
  "properties": {
    "type": { "const": "counter" },
    "version": { "const": "1.0" },
    "value": { "type": "number" },
    "label": { "type": "string" },
    "prefix": { "type": "string" },
    "suffix": { "type": "string" },
    "delta": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": { "type": "number" },
        "label": { "type": "string" }
      }
    },
    "sparkline": {
      "type": "array",
      "items": { "type": "number" }
    },
    "icon": { "type": "string" },
    "color": { "enum": ["default", "success", "warning", "danger"] }
  }
}
