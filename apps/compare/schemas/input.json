{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "version", "before", "after"],
  "properties": {
    "type": { "const": "compare" },
    "version": { "const": "1.0" },
    "title": { "type": "string" },
    "before": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": { "type": "string" },
        "alt": { "type": "string" },
        "caption": { "type": "string" }
      }
    },
    "after": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": { "type": "string" },
        "alt": { "type": "string" },
        "caption": { "type": "string" }
      }
    },
    "orientation": { "enum": ["horizontal", "vertical"] },
    "initialPosition": { "type": "number", "minimum": 0, "maximum": 100 },
    "labels": {
      "type": "object",
      "properties": {
        "before": { "type": "string" },
        "after": { "type": "string" }
      }
    }
  }
}
